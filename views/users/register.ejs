<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/loginRegister.css">

<main class="container my-3" >
  <section class="d-flex justify-content-center login">
      <div class="card col-5 login-card">
        <img class="card-img-top" alt="" src="https://images.unsplash.com/photo-1516132006923-6cf348e5dee2?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80" />
        <div class="card-body w-100">
        <%- include('../partials/flash')%>
        <h5 class="card-title">Register</h5>
          <form action="/register" method="POST" novalidate class="validated-form">
              <div class="mb-3">
                  <label class="form-label">First and Last name</label>
                  <div class="input-group">
                    <input type="text"  id="first_name" name="user[first_name]"  aria-label="First name" class="form-control" autofocus required>
                    <input type="text" id="last_name" name="user[last_name]" aria-label="Last name" class="form-control" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                    <div class="invalid-feedback">
                      Please fill in the blank
                    </div>
                  </div>
                  
              </div>
              <div class="mb-3">
                  <label class="form-label" for="username">Username</label>
                  <input class="form-control" type="text" id="username" name="user[username]" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please fill in the blank
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="email">Email</label>
                  <input class="form-control" type="email" id="email" name="user[email]" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please fill in the blank
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="date">Date of birth</label>
                  <input class="form-control" type="date" id="birth_date" name="user[birth_date]" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please fill in the blank
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="password">Password</label>
                  <input class="form-control" type="password" id="password" name="user[password]" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please fill in the blank
                  </div>
                </div>
                  <div class="mb-3">
                    <label class="form-label" for="repeat_password"> Repeat password</label>
                    <input class="form-control" type="password" id="repeat_password" name="user[repeat_password]" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                    <div class="invalid-feedback">
                      Please fill in the blank
                    </div>
                </div>
                <div class="mb-3">              
                  <input type="checkbox" name="user[terms_and_conditions]" value="true" required>
                  <label class="terms-and-conditions">I have read and agree to the <a href="/terms-and-conditions">Terms & Conditions</a></label>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    You must agree to the terms and conditions
                  </div>
                </div>
                <div class="mb-3">
                  <button class="btn btn-success float-end">Register</button>
              </div>
          </form>
      </div>
    </div>
</section>
</main>