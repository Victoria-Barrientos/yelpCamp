<% layout('layout/boilerplate')%>
<section class="vh-100">
<div class="accordion accordion-flush" id="accordionFlushExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
        Personal Information
      </button>
    </h2>
    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <main class="container my-3">
          <section class="d-flex justify-content-center login">
              <div class="card col-5 login-card">
                <div class="card-body">
                <h5 class="card-title">Personal Information</h5>
                  <form action="/users/<%=user._id%>?_method=PUT" method="POST" enctype="multipart/form-data" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label for="profile_picture">Profile Image</label>
                        <input type="file" id="profile_picture" name="user[profile_picture]">
                    </div>
                    <div class="mb-3">
                          <label class="form-label">First and Last name</label>
                          <div class="input-group">
                            <input type="text"  id="first_name" name="user[first_name]"  value="<%=user.first_name%>" aria-label="First name" class="form-control" autofocus required>
                            <input type="text" id="last_name" name="user[last_name]" value="<%=user.last_name%>" aria-label="Last name" class="form-control" required>
                            <div class="valid-feedback">
                              Looks good!
                            </div>
                            <div class="invalid-feedback">
                              Please fill in the blank
                            </div>
                          </div>
                          
                      </div>
                      <div class="mb-3">
                          <label class="form-label" for="username">Username</label>
                          <input class="form-control" type="text" id="username" name="user[username]" value="<%=user.username%>" required>
                          <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please fill in the blank
                          </div>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="email">Email</label>
                          <input class="form-control" type="email" id="email" name="user[email]" value="<%=user.email%>" disabled>
                        <div class="mb-3">
                          <label class="form-label" for="date">Date of birth</label>
                          <input class="form-control" type="date" id="birth_date" name="user[birth_date]" value="<%=user.birth_date%>" disabled>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="country">Place of birth</label>
                          <input class="form-control" type="text" id="country" name="user[country]" value="<%=user.country%>">
                        </div>
                        <div class="mb-3">
                          <button class="btn btn-success float-end">Save changes</button>
                      </div>
                  </form>
              </div>
            </div>
        </section>
        </main>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
        Change your password
      </button>
    </h2>
    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <% if(currentUser && currentUser.equals(user)) { %>
          <div class="card-text my-3 mx-3 text-link">
              <form class="d-inline" action="/users/<%=user._id%>/settings?_method=PUT" method="POST">
                <p>Are you sure you want to change the password to your account?</p>
                <button class="btn btn-warning">Save changes</button>
              </form>
          </div>
          <%}%>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
        Delete account
      </button>
    </h2>
    <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <% if(currentUser && currentUser.equals(user)) { %>
          <div class="card-text my-3 mx-3 text-link">
              <form class="d-inline" action="/users/<%=user._id%>/settings?_method=DELETE" method="POST">
                <p>Are you sure you want to delete your account? This action cannot be undone</p>
                <button class="btn btn-danger">Delete</button>
              </form>
          </div>
          <%}%>
      </div>
    </div>
  </div>
</div>
</section>
